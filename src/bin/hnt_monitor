#!/usr/bin/env bash

set -euo pipefail

export PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/root/bin

SOURCE="${BASH_SOURCE[0]}"
while [ -h "$SOURCE" ]; do # resolve $SOURCE until the file is no longer a symlink
  DIR="$( cd -P "$( dirname "$SOURCE" )" && pwd )"
  SOURCE="$(readlink "$SOURCE")"
  [[ $SOURCE != /* ]] && SOURCE="$DIR/$SOURCE" # if $SOURCE was a relative symlink, we need to resolve it relative to the path where the symlink file was located
done
DIR="$( cd -P "$( dirname "$SOURCE" )" && pwd )"
cd ${DIR}

id=main
init=true

# Set configs
for c in ../conf/*.conf; do
  . "${c}"
done

if [ ! -d "${logpath}" ]; then
  mkdir "${logpath}"
fi

if [ ! -d "../data" ]; then
  mkdir ../data
fi

echo "$(date +%Y-%m-%dT%H:%M:%S) [INFO] [$id]: initializing hnt monitor" >> "${logpath}/${logfile}"

rm -f ../data/*/.*lock

while true; do

  if [ "${init}" == "true" ]; then
    when="30 days ago"
  else
    when=
  fi

  # Run collectors
  for c in ../collectors/*; do
    . "${c}" &
  done

  # Run ETL
  if [ "${init}" == "false" ]; then
    for l in ../lib/*; do
      . "${l}" & 
    done
  else
    echo "$(date +%Y-%m-%dT%H:%M:%S) [INFO] [$id]: allowing collections to finish before processesing data" >> "${logpath}/${logfile}"
    sleep 10
    init=false
  fi

  sleep 60

done
