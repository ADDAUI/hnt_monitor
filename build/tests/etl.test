#!/usr/bin/env bash

set -euo pipefail

OPT=${1:-"run"}
SOURCE="${BASH_SOURCE[0]}"
while [ -h "$SOURCE" ]; do # resolve $SOURCE until the file is no longer a symlink
  DIR="$( cd -P "$( dirname "$SOURCE" )" && pwd )"
  SOURCE="$(readlink "$SOURCE")"
  [[ $SOURCE != /* ]] && SOURCE="$DIR/$SOURCE" # if $SOURCE was a relative symlink, we need to resolve it relative to the path where the symlink file was located
done
DIR="$( cd -P "$( dirname "$SOURCE" )" && pwd )"
cd ${DIR}

. test.conf

container=${1:-""}
image=${2:-""}
nginx_container=${nginx_container:-""}
hotspot="hotspot"

if [ ! "${container}" ]; then
  echo "Missing container name"
  exit 1
fi

if [ ! "${image}" ]; then
  echo "Missing container image"
  exit 1
fi


id=etl.test
configs=$(grep "=" ../../src/conf/hnt_monitor.conf | sed 's%=.*%%' | grep "_monitor")
vars=$(echo "${configs}" | sed 's%^%HNT_%' | tr 'a-z' 'A-Z')
run_vars=$(echo "${vars}" | sed 's%^%-e %;s%$%=true%' | tr '\n' ' ')
nginx_port=9999

test() {
  echo "$(date +%Y-%m-%dT%H:%M:%S) [INFO]: [$id] - starting validation"
  cleanup 2>/dev/null || true

  echo "$(date +%Y-%m-%dT%H:%M:%S) [INFO]: [$id] - building nginx test container"
  docker build -q -t nginx-test -f docker/nginx/Dockerfile . >/dev/null || cleanup_err

  echo "$(date +%Y-%m-%dT%H:%M:%S) [INFO]: [$id] - checking for nginx port collision on ${nginx_port}/tcp"
  port_ver=$(docker ps -a | grep "${nginx_port}/tcp") || true
  
  while [ "${port_ver}" ]; do
    echo "$(date +%Y-%m-%dT%H:%M:%S) [WARN]: [$id] - nginx port ${nginx_port}/tcp is in use. checking for a different port to use"
    ((nginx_port++)) || true
    echo "$(date +%Y-%m-%dT%H:%M:%S) [WARN]: [$id] - checking for nginx port collision on ${nginx_port}/tcp"
    port_ver=$(docker ps -a | grep "${nginx_port}/tcp") || true
  done

  run_vars="${run_vars} -e HNT_DEBUG=true -e HNT_BOBCAT_IPS=\"123\" -e HNT_NEBRA_IPS=${hotspot} -e HNT_SENSECAP_SERIAL_NUMBERS=${hotspot} -e HNT_HOTSPOT_ADDRESSES=${hotspot} -e HNT_PROMETHEUS_PG_HOST=\"\" -e bobcat_url=http://$(hostname):${nginx_port}"

  echo "$(date +%Y-%m-%dT%H:%M:%S) [INFO]: [$id] - running nginx test container on port ${nginx_port}/tcp"
  nginx_container=$(docker run -d -p ${nginx_port}:${nginx_port} nginx-test) || cleanup_err
  docker run -d ${run_vars} --name ${container} ${image} 1>/dev/null || cleanup_err

  echo "$(date +%Y-%m-%dT%H:%M:%S) [INFO]: [$id] - waiting for data to process ..."
  sleep 90
  logs=$(docker logs ${container})

  for v in $(set -o posix; set | sed 's% %:#:%g'); do
    if [[ "${v}" == "test_"*  ]]; then

      KEY=$(echo "${v}" | sed 's%=.*%%;s%__%##%g;s%test_%%;s%##%_%g' | tr 'A-Z' 'a-z')
      VAL=$(echo "${v}" | sed "s%.*=%%;s%[']%%g")

      if [ ! "${KEY}" == "timestamps" ]; then
        if [ "$(echo "${VAL}" | wc -l)" -eq 1 ]; then
          echo "$(date +%Y-%m-%dT%H:%M:%S) [INFO]: [$id] - validating [${KEY}]: ${VAL//:#:/ }"
          grep -q "${KEY}: ${VAL}" <<< "${logs}" || cleanup_err
        else
          for v in ${VAL}; do
            echo "$(date +%Y-%m-%dT%H:%M:%S) [INFO]: [$id] - validating [${KEY}]: ${v}"
            grep -q "${KEY}: ${v}" <<< "${logs}" || cleanup_err
          done
        fi
      else
        for t in ${VAL}; do
          echo "$(date +%Y-%m-%dT%H:%M:%S) [INFO]: [$id] - validating [timestamp]: ${t}"
          grep -q "${t}" <<< "${logs}" || cleanup_err
        done
      fi
    fi
  done

}

cleanup_err() {
  echo "$(date +%Y-%m-%dT%H:%M:%S) [ERROR]: [$id] - validation failed"
  echo "$(date +%Y-%m-%dT%H:%M:%S) [ERROR]: [$id] - docker logs:"
  echo
  docker logs ${container} || true
  echo
  cleanup
  echo "$(date +%Y-%m-%dT%H:%M:%S) [ERROR]: [$id] - FAILED!"
  exit 1
}

cleanup() {
  echo "$(date +%Y-%m-%dT%H:%M:%S) [INFO]: [$id] - cleaning up"
  #docker rm -f ${container} > /dev/null || true
#  if [ "${nginx_container}" ]; then
#    docker rm -f ${nginx_container} > /dev/null || true
#  fi
}

test
cleanup
echo "$(date +%Y-%m-%dT%H:%M:%S) [INFO]: [$id] - PASSED!"
